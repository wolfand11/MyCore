export PATH=$PATH:/opt/local/bin:/opt/local/sbin:/usr/local/bin
export GRAPHVIZ_DOT=/usr/local/bin/dot 

# ---------------------------------------------------------
## Support Chinese
export LC_ALL=en_US.UTF-8  
export LANG=en_US.UTF-8

# ---------------------------------------------------------
## Support nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" # This loads nvm

# -------------------------SHORTCUT-------------------------
# apps aliases
alias pngcrush="/Applications/Xcode.app/Contents/Developer/Platforms/iPhoneOS.platform/Developer/usr/bin/pngcrush -revert-iphone-optimizations "
alias xemacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
alias goagent="python ~/Documents/MyToolkit/GoAgent/MyGoAgent.py"

# some more ls aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
#
#alias ls='ls -Fph --color=tty --group-directories-first '
alias ~='cd ~'
alias home='~'
alias ..='cd ..'
alias ....='cd ../..'
alias 2.='....'
alias ......='cd ../../..'
alias 3.='......'
alias ........='cd ../../../..'
alias 4.='........'
