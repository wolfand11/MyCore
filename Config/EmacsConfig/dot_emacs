;; -*- Emacs-Lisp -*-
(message "common dot_emacs begin")

;; 设置优先的编码系统，用于加载文件
(prefer-coding-system 'utf-8)
;; 设置默认编码,用于保存文件
(setq default-buffer-file-coding-system 'utf-8)

;; 设置EmacsConfig目录----------------------------------------
(setq emacs_config_path "~/Documents/MyToolkit/Config/EmacsConfig/")
(setq emacs_resource_path "~/Documents/MyToolkit/Resource/")
(add-to-list 'load-path emacs_config_path)
(defun AppendToEmacsConfigPath (subpath)
    "concat emacs_config_path with subpath"
    (concat emacs_config_path subpath))
(defun AppendToEmacsResourcePath (subpath)
    "concat emacs_config_path with subpath"
    (concat emacs_resource_path subpath))


;; 加载Emacs配置
(load (AppendToEmacsConfigPath "emacs_config.el"))

(message "common dot_emacs end")
(put 'upcase-region 'disabled nil)
